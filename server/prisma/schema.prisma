generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}


model Ticker { 
  id          Int       @id @default(autoincrement()) 
  cmcId       Int         @unique
  name        String
  cmcticker   String?
  krakenticker String? 

  cmcGainers  CmcGainers[]  // one-to-many relation

  krakenCandle KrakenCandle[] // one-to-many relation
  
}

model CmcLosers {  
  id          Int     @id @default(autoincrement()) 
  cmcId    Int
  price       Float
  p1h_change  Float
  p24h_change Float
  p7d_change  Float
  p30d_change Float  

  
 
}

model CmcGainers {  
  id          Int     @id @default(autoincrement()) 
  cmcId    Int
  price       Float
  p1h_change  Float
  p24h_change Float
  p7d_change  Float
  p30d_change Float  

  ticker      Ticker  @relation(fields: [cmcId], references: [cmcId], onDelete: Cascade)
 
}

model KrakenCandle {
  id    Int    @id @default(autoincrement())
  timestamp Int
  tickerId Int  
  price Float
  volume Float
  ema21 Float
  ema50 Float
  ema200 Float
  rsi14 Float
  last2change Float
  last6change Float
  last144change Float
  last288change Float
  last100volavg Float
  

  tickerRel Ticker @relation(fields: [tickerId], references: [id], onDelete: Cascade)
  @@unique([timestamp, tickerId])

}


